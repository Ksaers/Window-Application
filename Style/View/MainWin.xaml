<Window x:Class="Style.View.MainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Style.View"
        mc:Ignorable="d"
        Style="{StaticResource brushWin}"
        SizeToContent="WidthAndHeight"
        Title="MainWin" Height="300" Width="250">
    <Window.Resources>
        
        <Style TargetType="Button" BasedOn="{StaticResource buttonMain}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" >
            <Button Content="Форма ввода сотрудников" Height="35" Click="ClickBut" />
            <Button Content="2" Height="35"/>
            <Button Content="3" Height="35"/>
            <Button Content="4" Height="35"/>
            <Button Content="Выход" Height="35" Click="ClickExit"/>
        </StackPanel>
    </Grid>
</Window>
